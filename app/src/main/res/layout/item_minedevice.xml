<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/fragment_bg_common">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/common_margin_bottom_first"
        android:layout_marginTop="@dimen/common_margin_top_first"
        >

        <TextView
            android:id="@+id/devicenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:textColor="@color/tab_color_text_default"
            android:textSize="@dimen/textsize_common_12sp"/>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/devicenum"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_marginTop="@dimen/common_margin_top_first"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category"
                android:layout_centerHorizontal="true"
                android:textColor="@color/tab_color_text_default"
                android:textSize="@dimen/textsize_common_12sp"
                />

            <TextView
                android:id="@+id/baterry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category"
                android:layout_centerHorizontal="true"
                android:textColor="@color/tab_color_text_default"
                android:textSize="@dimen/textsize_common_12sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/devicestate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/category"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_20dp"
            android:textColor="@color/tab_color_text_select"
            android:textSize="@dimen/textsize_common_12sp"
            />


    </RelativeLayout>

</RelativeLayout>
